<%- include('../particles/navigation_book.ejs') %>
    <div class="form">

        <div class="tab-content">
            <h2>Создание</h2>
            <form action="/store" enctype="multipart/form-data" method="post">

                <div class="field-wrap">
                    <label class="form-group__label" for="title">

                    </label>
                    <input type="text" id="title" name="title" required autocomplete="off" placeholder="title" />
                </div>

                <div class="field-wrap">
                    <label class="form-group__label" for="file">

                    </label>
                    <input type="file" id="file" name="file" accept="image/png, image/jpeg, image/jpg" required
                        autocomplete="off" placeholder="image" />
                </div>

                <div class="field-wrap">
                    <label class="form-group__label" for="description">

                    </label>
                    <input type="text" id="description" name="description" required autocomplete="off"
                        placeholder="description" />
                </div>

                <div class="form-group" class="center">
                    <label class="form-group__label" for="categ_id"></label>
                    <select id="categ_id" name="categ_id" class="center">
                        <% for (let i=0; i < categories.length; i++) { %>
                            <option value="<%= categories[i].id %>" class="option-categ">
                                <%= categories[i].title %>
                            </option>
                            <% } %>
                    </select>
                </div>
                <button class="button button-block" type="submit" value="Создать">Создать</button>

            </form>
        </div>

    </div>

    <%- include('../particles/footer.ejs') %>