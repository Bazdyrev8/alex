<%- include('../particles/navigation_book.ejs') %>

    <div class="form">

        <div class="tab-content">
            <h1>Создание</h1>
            <form action="/store" method="post">

                <div class="field-wrap">
                    <label class="form-group__label" for="title">

                    </label>
                    <input type="text" id="title" name="title" required autocomplete="off" placeholder="title" />
                </div>

                <div class="field-wrap">
                    <label class="form-group__label" for="image">

                    </label>
                    <input type="file" id="image" name="image" required autocomplete="off" placeholder="image" />
                </div>

                <div class="field-wrap">
                    <label class="form-group__label" for="image">

                    </label>
                    <input type="text" id="description" name="description" required autocomplete="off" placeholder="description" />
                </div>

                <div class="form-group" class="center">
                    <label class="form-group__label" for="description"></label>
                    <select name="categ_id" class="center">
                        <% for (let i=0; i < categories.length; i++) { %>
                            <option value="<%= categories[i].id %>" class="option-categ">
                                <%= categories[i].title %>
                            </option>
                            <% } %>
                    </select>
                </div>
                <button class="button button-block" type="submit" value="Создать">Создать</button>

            </form>

        </div>

    </div>

<%- include('../particles/footer.ejs') %>